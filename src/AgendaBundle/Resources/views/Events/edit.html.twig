{% extends 'base.html.twig' %}

{% block body_class %}<body id="ged">{% endblock %}

{% block main_content %}
    {{ include('includes/topbar.html.twig') }}
    {{ include('includes/sidebar.html.twig') }}

    <main class="deep-main agenda_form">
        <h1>Création d'un évènement</h1>

        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        <div id="date_start_event_end">
            {{ form_label(edit_form.start) }}
            {{ form_errors(edit_form.start) }}
            {{ form_widget(edit_form.start) }}

        </div>

        <div>
            {{ form_label(edit_form.titre) }}
            {{ form_errors(edit_form.titre) }}
            {{ form_widget(edit_form.titre) }}
        </div>

        <div>
            {{ form_label(edit_form.contenu) }}
            {{ form_errors(edit_form.contenu) }}
            {{ form_widget(edit_form.contenu) }}
        </div>

        <div id="date_end_event">
            {{ form_label(edit_form.end) }}
            {{ form_errors(edit_form.end) }}
            {{ form_widget(edit_form.end) }}
        </div>

        {{ form_end(edit_form) }}

    </main>


{% endblock %}
