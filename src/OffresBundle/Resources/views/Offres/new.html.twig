{% extends 'base.html.twig' %}

{% block body_class %}<body id="emploi">{% endblock %}

{% block main_content %}
    {% embed "includes/topbar.html.twig" %}
        {% block breadcrumb %}<a href="{{ path('homepage') }}">P@rtnet</a><div class="arrow-right"></div><a href="{{ path('offres-emploi') }}">Offres d'emploi</a>{% endblock %}
    {% endembed %}
    {{ include('includes/sidebar.html.twig') }}

    <main class="admin-form deep-main">
        <h1>Ajout d'une offre d'emploi non pourvue</h1>

        {{ form_start(form) }}

        <div>
            {{ form_label(form.titre) }}
            {{ form_widget(form.titre) }}
        </div>

        <div>
            {{ form_label(form.entreprise) }}
            {{ form_widget(form.entreprise) }}
        </div>

        <div>
            {{ form_label(form.lieu) }}
            {{ form_widget(form.lieu) }}
        </div>

        <div>
            {{ form_label(form.resume) }}
            {{ form_widget(form.resume) }}
        </div>

        <div>
            {{ form_label(form.file, 'Document (.pdf)') }}
            <div class="fileUpload">
                <span>uploader</span>
                {{ form_widget(form.file) }}
            </div>
        </div>

        <div>
            {{ form_label(form.fil_actu) }}
            {{ form_widget(form.fil_actu) }}
            <label for="offresbundle_offres_fil_actu" class="checkbox"></label>
        </div>

        {{ form_errors(form.titre) }}
        {{ form_errors(form.entreprise) }}
        {{ form_errors(form.lieu) }}
        {{ form_errors(form.resume) }}
        {{ form_errors(form.file) }}
        {{ form_errors(form.fil_actu) }}

        {{ form_end(form) }}
    </main>
{% endblock %}
